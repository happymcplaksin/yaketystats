#!/bin/sh

# Roll messages file (could also be done by logrotate or the like)
# Once a day, roll the messages file to messages.`date+%d`

uname="`uname`"
if [ "$uname" = "Linux" ]
then
  VAR=/var/lib/yaketystats
else
  VAR=/var/yaketystats
fi

messages=$VAR/messages

cp $messages $messages.`date +%d`
> $messages
